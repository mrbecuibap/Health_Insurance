@model IEnumerable<Medicare_Insurance.Models.Policy>

@{
    ViewBag.Title = "Index";
}
<section class="banner">
    <div class="grid wide container-banner">
        <h1 class="container-banner__title">
            Service
        </h1>
    </div>
</section>

<!-- ========================================== PURCHASE SECTION ========================================== -->
<section class="purchase-step">
    <div class="grid wide container-purchase-step">
        <div class="container-purchase-step__title">
            <h1>Buy insurance online in four steps</h1>
        </div>
        <div class="container-purchase-step__content">
            <div class="container-purchase-step__content-item">
                <div class="container-purchase-step__content-item-number">
                    <span>1</span>
                </div>
                <div class="container-purchase-step__content-item-desc">
                    Choose package coverage
                    fit
                </div>
            </div>
            <div class="container-purchase-step__content-item">
                <div class="container-purchase-step__content-item-number">
                    <span>2</span>
                </div>
                <div class="container-purchase-step__content-item-desc">
                    Choose your fee &
                    insurance benefits
                </div>
            </div>
            <div class="container-purchase-step__content-item">
                <div class="container-purchase-step__content-item-number">
                    <span>3</span>
                </div>
                <div class="container-purchase-step__content-item-desc">
                    Fill in the information
                    personal
                </div>
            </div>
            <div class="container-purchase-step__content-item">
                <div class="container-purchase-step__content-item-number no-line">
                    <span>4</span>
                </div>
                <div class="container-purchase-step__content-item-desc">Payment online</div>
            </div>
        </div>
    </div>
</section>

<!-- ========================================== PRODUCT SECTION ========================================== -->
<section class="product">
    <div class="grid wide container-product">
        <div class="container-product__title">
            <h1>Find insurance according to your needs</h1>
            <p>You can choose more than one need</p>
        </div>
        <div class="container-product__content">

            @foreach (var policy in Model)
            {
                <div class="container-product__content-item">
                    <div class="container-product__content-item-front">
                        <img class="container-product__content-item-front-thumbnail" src="~/Content/user/img/Product_Section/Accident/@policy.image" alt="@policy.policyName">
                        <h3 class="container-product__content-item-front-name">@policy.policyName</h3>
                    </div>
                    <div class="container-product__content-item-back">
                        <div class="container-product__content-item-back-desc">
                            <div class="container-product__content-item-back-desc-child">
                                <div class="container-product__content-item-back-desc-child-img">
