                                </div>
                                @foreach (var medical in policy.Medicals)
                                {
                                    <div class="container-product__content-item-back-desc-child-text">@medical.medicalName</div>
                                }
                            </div>
                        </div>
                        <button class="container-product__content-item-back-btn">See more</button>
                    </div>
                    <div class="container-product__content-item-background"></div>
                </div>
            }
        </div>
    </div>
</section>

